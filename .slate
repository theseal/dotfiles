# Configs.
config defaultToCurrentScreen true
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true

# Misc aliases.
alias showHintsLeftHand hint AOEUIYQJKX
alias showNormalHint hint AOEUIDHTNSYXFBPKGMCW

# Abstract positions.
alias full          move screenOriginX;screenOriginY                  screenSizeX;screenSizeY
alias lefthalf      move screenOriginX;screenOriginY                  screenSizeX/2;screenSizeY
alias righthalf     move screenOriginX+screenSizeX/2;screenOriginY    screenSizeX/2;screenSizeY
alias up            move screenOriginX;screenOriginY                  screenSizeX;screenSizeY/2
alias down          move screenOriginX;screenOriginY+screenSizeY/2    screenSizeX;screenSizeY/2

# Key bindings.
bind right:ctrl;shift resize +10% +0
bind left:ctrl;shift resize -10% +0
bind down:ctrl;shift resize +0 +10%
bind up:ctrl;shift resize +0 -10%
bind return:ctrl ${full}
bind left:ctrl ${lefthalf}
bind right:ctrl ${righthalf}
bind up:ctrl ${up}
bind down:ctrl ${down}
bind space:ctrl throw next
bind pad7:ctrl corner top-left resize:screenSizeX/2;screenSizeY/2
bind pad1:ctrl corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind pad9:ctrl corner top-right resize:screenSizeX/2;screenSizeY/2
bind pad3:ctrl corner bottom-right resize:screenSizeX/2;screenSizeY/2
bind 0:ctrl relaunch
